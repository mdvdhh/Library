-- WertUi Notification Library
local WertUi = {}

local TweenService = game:GetService("TweenService")

-- Function tạo notification
function WertUi:Notify(settings)
    local Title = settings.Title or "Notification"
    local Description = settings.Description or ""
    local Duration = settings.Duration or 5
    local CornerRadius = UDim.new(0, settings.Corner or 8)
    local Icon = settings.Icon or "rbxassetid://6034509993"

    -- Tạo GUI Screen
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "WertUi"
    ScreenGui.ResetOnSpawn = false
    ScreenGui.IgnoreGuiInset = true
    ScreenGui.Parent = game.CoreGui

    -- Holder chính
    local Holder = Instance.new("Frame")
    Holder.AnchorPoint = Vector2.new(0.5, 1)
    Holder.Position = UDim2.new(0.5, 0, 0.9, 0)
    Holder.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    Holder.BackgroundTransparency = 0.2
    Holder.AutomaticSize = Enum.AutomaticSize.Y
    Holder.Size = UDim2.new(0, 350, 0, 60)
    Holder.Parent = ScreenGui

    local UICorner = Instance.new("UICorner", Holder)
    UICorner.CornerRadius = CornerRadius

    local UIPadding = Instance.new("UIPadding", Holder)
    UIPadding.PaddingTop = UDim.new(0, 10)
    UIPadding.PaddingBottom = UDim.new(0, 10)
    UIPadding.PaddingLeft = UDim.new(0, 10)
    UIPadding.PaddingRight = UDim.new(0, 10)

    local UIList = Instance.new("UIListLayout", Holder)
    UIList.FillDirection = Enum.FillDirection.Vertical
    UIList.HorizontalAlignment = Enum.HorizontalAlignment.Left
    UIList.VerticalAlignment = Enum.VerticalAlignment.Center
    UIList.Padding = UDim.new(0, 4)

    -- Nội dung notification
    local ContentFrame = Instance.new("Frame")
    ContentFrame.BackgroundTransparency = 1
    ContentFrame.Size = UDim2.new(1, 0, 0, 40)
    ContentFrame.AutomaticSize = Enum.AutomaticSize.Y
    ContentFrame.Parent = Holder

    local IconImage = Instance.new("ImageLabel")
    IconImage.Image = Icon
    IconImage.BackgroundTransparency = 1
    IconImage.Size = UDim2.new(0, 24, 0, 24)
    IconImage.Position = UDim2.new(0, 0, 0, 0)
    IconImage.Parent = ContentFrame

    local TextHolder = Instance.new("Frame")
    TextHolder.BackgroundTransparency = 1
    TextHolder.Size = UDim2.new(1, -40, 0, 40)
    TextHolder.Position = UDim2.new(0, 35, 0, 0)
    TextHolder.AutomaticSize = Enum.AutomaticSize.Y
    TextHolder.Parent = ContentFrame

    local TitleText = Instance.new("TextLabel")
    TitleText.Text = Title
    TitleText.Font = Enum.Font.GothamSemibold
    TitleText.TextSize = 16
    TitleText.TextColor3 = Color3.fromRGB(255, 255, 255)
    TitleText.BackgroundTransparency = 1
    TitleText.TextXAlignment = Enum.TextXAlignment.Left
    TitleText.Size = UDim2.new(1, 0, 0, 20)
    TitleText.Parent = TextHolder

    local DescriptionText = Instance.new("TextLabel")
    DescriptionText.Text = Description
    DescriptionText.Font = Enum.Font.Gotham
    DescriptionText.TextSize = 14
    DescriptionText.TextColor3 = Color3.fromRGB(200, 200, 200)
    DescriptionText.BackgroundTransparency = 1
    DescriptionText.TextWrapped = true
    DescriptionText.TextXAlignment = Enum.TextXAlignment.Left
    DescriptionText.AutomaticSize = Enum.AutomaticSize.Y
    DescriptionText.Size = UDim2.new(1, 0, 0, 20)
    DescriptionText.Position = UDim2.new(0, 0, 0, 20)
    DescriptionText.Parent = TextHolder

    Holder.BackgroundTransparency = 1
    Holder.Position = UDim2.new(0.5, 0, 1.2, 0)
    TweenService:Create(Holder, TweenInfo.new(0.4, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {
        BackgroundTransparency = 0.2,
        Position = UDim2.new(0.5, 0, 0.9, 0)
    }):Play()

    task.delay(Duration, function()
        TweenService:Create(Holder, TweenInfo.new(0.4, Enum.EasingStyle.Quad, Enum.EasingDirection.In), {
            BackgroundTransparency = 1,
            Position = UDim2.new(0.5, 0, 1.2, 0)
        }):Play()
        task.wait(0.4)
        ScreenGui:Destroy()
    end)
end

return WertUi
